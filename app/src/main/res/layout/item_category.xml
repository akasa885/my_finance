<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewOuter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="3dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewInner"
            card_view:cardBackgroundColor="@color/grayPrimary"
            card_view:cardElevation="0dp"
            android:layout_marginTop="3dp"
            card_view:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/cateDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingTop="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/ruda"
                    android:gravity="left"
                    android:textColor="@color/textColorNav"
                    android:textSize="16dp"
                    tools:text="Hadiah Undian" />

                <TextView
                    android:id="@+id/categoryType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/ruda"
                    android:gravity="left"
                    android:textColor="@color/textColorNav"
                    android:textSize="16sp"
                    tools:text="Income" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/amountContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/delViewButt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icon_delete" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</LinearLayout>