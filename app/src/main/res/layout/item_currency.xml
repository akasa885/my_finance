<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewOuter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="3dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/cateDesc"
                android:layout_width="match_parent"
                android:paddingTop="3dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currencyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/ruda"
                    android:gravity="left"
                    android:textColor="@color/textColorNav"
                    android:textSize="16dp"
                    tools:text="Indonesia" />

                <TextView
                    android:id="@+id/currencyTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/ruda"
                    android:gravity="left"
                    android:textColor="@color/textColorNav"
                    android:textSize="16sp"
                    tools:text="Rp (Rupiah)" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/amountContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/checkViewButt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/check_box"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>